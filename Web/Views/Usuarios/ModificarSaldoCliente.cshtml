@using Dominio;
@{
    ViewData["Title"] = "ModificarSaldoCliente";
}

<h1>Modificar Saldo</h1>
<br />

@if(ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if(ViewBag.Exito != null)
{
    <div class="alert alert-success">@ViewBag.Exito</div>
}
<br />

<form method="post" action="/cliente/ModificarSaldoCliente">
    <div class="form-group">
        <label class="form-label">Seleccione cliente para modificar su saldo</label>
        <select class="form-select" name="idUsuario">
            @foreach (Usuario u in Sistema.Instancia.Usuario)
            {
                if (u is Cliente c)
                {
                    <option value="@c.Id">@c.Nombre @c.Apellido</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <label class="form-label">Nuevo saldo</label>
        <input type="number" class="form-control" placeholder="Ingrese nuevo saldo" name="nuevoSaldo"/>
    </div>

    <br />

    <input type="submit" class="btn btn-secondary" value="Modificar Saldo" />

</form>

